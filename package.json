{
  "name": "@symphonyscript/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "watch:kernel": "cd packages/kernel && pnpm watch",
    "watch:theory": "cd packages/theory && pnpm watch",
    "watch:synaptic": "cd packages/synaptic && pnpm watch",
    "watch:composer": "cd packages/composer && pnpm watch",
    "test:kernel": "cd packages/kernel && pnpm test",
    "test:theory": "cd packages/theory && pnpm test",
    "test:synaptic": "cd packages/synaptic && pnpm test",
    "test:composer": "cd packages/composer && pnpm test",
    "build:kernel": "cd packages/kernel && pnpm build",
    "build:theory": "cd packages/theory && pnpm build",
    "build:synaptic": "cd packages/synaptic && pnpm build",
    "build:composer": "cd packages/composer && pnpm build",
    "compile:kernel:web": "cd packages/kernel && wasm-pack build --target web",
    "build": "pnpm build:kernel && pnpm build:theory && pnpm build:synapticpnpm && build:composer",
    "test": "pnpm -r test"
  },
  "private": true,
  "devDependencies": {
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-react": "^5.1.2",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.2.0",
    "jest-util": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "10.9.1",
    "tslib": "^2.8.1",
    "typescript": "~5.9.2",
    "vite": "^7.3.0",
    "vite-plugin-custom-tsconfig": "^1.0.4",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vite-tsconfig-paths": "^6.0.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
