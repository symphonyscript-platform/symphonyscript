{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2015",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "incremental": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    "paths": {
      "@symphonyscript/composer": [
        "packages/composer/src/index.ts"
      ],
      "@symphonyscript/dsp": [
        "packages/dsp/src/index.ts"
      ],
      "@symphonyscript/kernel": [
        "packages/kernel/src/index.ts"
      ],
      "@symphonyscript/synthesis": [
        "packages/synthesis/src/index.ts"
      ],
      "@symphonyscript/synaptic": [
        "packages/synaptic/src/index.ts"
      ],
      "@symphonyscript/theory": [
        "packages/theory/src/index.ts"
      ],
      "@symphonyscript/web": [
        "packages/web/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/dist"
  ]
}