{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": false,
    "incremental": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/test-output"
  ]
}