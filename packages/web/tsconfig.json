{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist",
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "types": [
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "@symphonyscript/dsp": [
                "../dsp/dist/index.d.ts"
            ],
            "@symphonyscript/kernel": [
                "../kernel/dist/index.d.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/__tests__",
        "src/setup-tests.ts"
    ]
}